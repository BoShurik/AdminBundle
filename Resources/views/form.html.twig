{% extends 'form_div_layout.html.twig' %}

{% block textarea_widget %}
    {% spaceless %}
        {% set attr = attr|merge({'class': 'xxlarge'}) %}
        <textarea {{ block('widget_attributes') }}>{{ value }}</textarea>
    {% endspaceless %}
{% endblock textarea_widget %}

{% block date_widget %}
    {% spaceless %}
        {% if widget == 'single_text' %}
            {{ block('field_widget') }}
        {% else %}
            <div {{ block('widget_container_attributes') }}>
                {{ date_pattern|replace({
                '{{ year }}':  form_widget(form.year, { 'attr': {'class': 'mini'} }),
                '{{ month }}': form_widget(form.month, { 'attr': {'class': 'mini'} }),
                '{{ day }}':   form_widget(form.day, { 'attr': {'class': 'mini'} }),
                })|raw }}
            </div>
        {% endif %}
    {% endspaceless %}
{% endblock date_widget %}

{% block time_widget %}
    {% spaceless %}
        {% if widget == 'single_text' %}
            {{ block('field_widget') }}
        {% else %}
            <div {{ block('widget_container_attributes') }}>
                {{ form_widget(form.hour, { 'attr': { 'size': '1', 'class': 'mini' } }) }}:{{ form_widget(form.minute, { 'attr': { 'size': '1', 'class': 'mini' } }) }}{% if with_seconds %}:{{ form_widget(form.second, { 'attr': { 'size': '1', 'class': 'mini' } }) }}{% endif %}
            </div>
        {% endif %}
    {% endspaceless %}
{% endblock time_widget %}

{% block form_label %}
    {% spaceless %}
        {{ block('generic_label') }}
    {% endspaceless %}
{% endblock form_label %}

{% block field_row %}
    {% spaceless %}
        <div class="control-group {% if form_errors(form)|length > 1 %}error{% endif %}">
            {% set attr = attr|merge({'class': attr.class|default('') ~ ' control-label'}) %}
            {{ form_label(form, label|default(null), { 'attr': attr }) }}
            <div class="controls">
                {{ form_widget(form) }}
                {{ form_errors(form) }}
            </div>
        </div>
    {% endspaceless %}
{% endblock field_row %}

{% block field_widget %}
    {% spaceless %}
        {{ parent() }}

        {% if help is defined %}
            <p class="help-block">
                {{ help }}
            </p>
        {% endif %}
    {% endspaceless %}
{% endblock field_widget %}

{% block field_errors %}
    {% spaceless %}
        {% if errors is defined and errors|length > 0 %}
            {% for error in errors %}
                <span class="help-inline">{{ error.messageTemplate|trans(error.messageParameters, 'validators') }}</span>
            {% endfor %}
        {% endif %}
    {% endspaceless %}
{% endblock field_errors %}