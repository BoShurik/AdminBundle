{% extends 'BoShurikAdminBundle::layout.html.twig' %}
{% import 'BoShurikAdminBundle::macros.html.twig' as macro %}

{% trans_default_domain "BoShurikAdminBundle" %}

{% form_theme form 'BoShurikAdminBundle:form:form.html.twig' %}

{% block title %}
    {% trans %}controller.admin.administrator._interface.edit{% endtrans %}
{% endblock %}

{% block content %}
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">{{ block('title') }}</h3>
            <div class="box-tools">
                <div class="btn-group">
                    <a href="{{ action_path(object, 'list') }}" class="btn btn-default" title="{% trans %}interface.list{% endtrans %}"><i class="fa fa-list text-blue"></i></a>
                    <a href="{{ action_path(object, 'create') }}" class="btn btn-default" title="{% trans %}interface.create{% endtrans %}"><i class="fa fa-edit text-blue"></i></a>
                    {% if delete_form is defined and delete_form is not null %}
                        {% form_theme delete_form 'BoShurikAdminBundle:form:inline.html.twig' %}
                        {{ form_start(delete_form) }}
                        {{ form_widget(delete_form) }}
                            <button type="submit" class="btn btn-danger js-delete" title="{% trans %}interface.delete{% endtrans %}"><i class="fa fa-remove"></i></button>
                        {{ form_end(delete_form) }}
                    {% endif %}
                </div>
            </div>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        {{ form_start(form, { 'attr': { 'class': 'form-horizontal' } }) }}

            <div class="box-body">
                {{ form_widget(form) }}
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <button type="submit" class="btn btn-info pull-right">{% trans %}interface.save{% endtrans %}</button>
            </div>
            <!-- /.box-footer -->
        {{ form_end(form) }}
    </div>
{% endblock %}