{% extends 'BoShurikAdminBundle::layout.html.twig' %}

{% trans_default_domain "admin" %}

{% block body %}
    <div class="container" style="margin-top: 40px;">
        <div class="row">
            <div class="span4 offset4 well">
                <legend>{% trans %}interface.login.legend{% endtrans %}</legend>
                {% if error %}
                    <div class="alert alert-error"><a class="close" data-dismiss="alert" href="#">Ã—</a>{{ error | trans() }}</div>
                {% endif %}
                <form action="{{ path('admin_auth') }}" method="post" accept-charset="UTF-8">
                    <input type="text" id="username" class="span4" name="_username" placeholder="{% trans %}interface.login.username{% endtrans %}">
                    <input type="password" id="password" class="span4" name="_password" placeholder="{% trans %}interface.login.password{% endtrans %}">
                    <label class="checkbox"><input type="checkbox" name="_remember_me"> {% trans %}interface.login.remember_me{% endtrans %}</label>
                    <button type="submit" name="submit" class="btn btn-info btn-block">{% trans %}interface.login.sign_in{% endtrans %}</button>
                </form>
            </div>
        </div>

        {{ block('footer') }}
    </div>
{% endblock %}