{% extends 'BoShurikAdminBundle::base.html.twig' %}

{% block body_class %}hold-transition skin-blue login-page{% endblock %}

{% block body %}
    <div class="login-box">
        <div class="login-logo">
            <b>Admin</b>istration
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Sign in to start your session</p>
            {% if error %}
                <p class="login-box-msg text-red">{{ error.message }}</p>
            {% endif %}

            <form action="{{ path('admin_auth') }}" method="post">
                <div class="form-group has-feedback">
                    <input type="text" class="form-control" placeholder="Email" name="_username" value="{{ username }}">
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="Password" name="_password">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox icheck">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember Me
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>
        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->
{% endblock %}