{% extends 'BoShurikAdminBundle::layout.html.twig' %}

{% trans_default_domain 'admin' %}
{% form_theme form 'BoShurikAdminBundle::form.html.twig' %}

{% block content %}
    <div class="row">
        <div class="span6">
            <h1>Administrator edit</h1>
        </div>
        <div class="span6">
            <div class="pull-right">
                <a href="{{ path('admin_administrator_show', { 'id': entity.id }) }}" class="btn"><i class="icon-eye-open"></i> {% trans %}interface.actions.show{% endtrans %}</a>
                <a href="{{ path('admin_administrator_new') }}" class="btn"><i class="icon-file"></i> {% trans %}interface.actions.create{% endtrans %}</a>
                <a href="{{ path('admin_administrator') }}" class="btn"><i class="icon-list"></i> {% trans %}interface.actions.list{% endtrans %}</a>
                <form style="display: inline;" action="{{ path('admin_administrator_delete', { 'id': entity.id }) }}" method="post">
                    {{ form_rest(delete_form) }}
                    <button type="submit" class="btn btn-danger"><i class="icon-trash icon-white"></i> {% trans %}interface.actions.delete{% endtrans %}</button>
                </form>
            </div>
        </div>
    </div>

    <form action="{{ path('admin_administrator_update', { 'id': entity.id }) }}" method="post" class="form-horizontal" {{ form_enctype(form) }}>
        {{ form_widget(form) }}
        <div class="form-actions">
            <button type="submit" class="btn" name="saveAction" value="save">{% trans %}interface.actions.save{% endtrans %}</button>
            <button type="submit" class="btn" name="saveAction" value="save_list">{% trans %}interface.actions.save_list{% endtrans %}</button>
            <button type="submit" class="btn" name="saveAction" value="save_new">{% trans %}interface.actions.save_new{% endtrans %}</button>
        </div>
    </form>
{% endblock %}
