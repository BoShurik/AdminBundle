{% extends '::base.html.twig' %}

{% trans_default_domain "admin" %}

{% block stylesheets %}
    <link href="{{ asset('bundles/boshurikadmin/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/boshurikadmin/css/bootstrap-responsive.min.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/boshurikadmin/css/main.css') }}" rel="stylesheet">

    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('bundles/boshurikadmin/js/jquery-1.8.2.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/boshurikadmin/js/bootstrap.min.js') }}"></script>
{% endblock %}

{% block body %}

    {# Top menu #}
    {% block top_menu %}
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container-fluid">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a class="brand" href="{{ path('admin_index') }}">{% trans %}interface.layout.title{% endtrans %}</a>
                    <div class="nav-collapse collapse">
                        <p class="navbar-text pull-right">
                            {% trans %}interface.layout.security.logged_in{% endtrans %} <a href="{{ path('admin_administrator_show', { 'id': app.user.id }) }}">{{ app.user.username }}</a> <a href="{{ path('admin_logout') }}">{% trans %}interface.layout.security.logout{% endtrans %}</a>
                        </p>
                        <ul class="nav">
                            <li {% if app.request.get('_route') == 'admin_index' %}class="active"{% endif %}><a href="{{ path('admin_index') }}">{% trans %}interface.layout.home{% endtrans %}</a></li>
                            <li {% if app.request.get('_route') == 'admin_administrator' %}class="active"{% endif %}><a href="{{ path('admin_administrator') }}">{% trans %}interface.layout.administrators{% endtrans %}</a></li>
                        </ul>
                    </div><!--/.nav-collapse -->
                </div>
            </div>
        </div>
    {% endblock %}

    {% block container %}
        <div class="container-fluid">
            <div class="row-fluid">
                {# Sidebar #}
                <div class="span2">
                    {% render 'BoShurikAdminBundle:Sidebar:sidebar' %}
                </div><!--/span-->
                {# Content #}
                <div class="span10">
                    {% block content %}{% endblock %}
                </div><!--/span-->
            </div><!--/row-->

            {% block footer %}
                <hr>

                <footer>
                    <p>&copy; Company 2012</p>
                </footer>
            {% endblock %}

        </div><!--/.fluid-container-->
    {% endblock %}

{% endblock %}